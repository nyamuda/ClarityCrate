            <MudNavLink Href="Account/Manage/ChangePassword" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Password">
                Password
            </MudNavLink>
            
        </li>
        
    </ul>
    </MudNavMenu>
    
    <MudMainContent Class="vh-100 page d-flex flex-column justify-content-between">

        <MudContainer>
            @Body
        </MudContainer>

    </MudMainContent>
</MudLayout>




