@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset password confirmation</PageTitle>



<div class="mt-15 container py-5">
    <MudCard Style="max-width: 500px;" Class="py-4 m-auto">
        <MudCardContent Class="text-center">

            <h2 class="card-title mb-5">Reset password confirmation</h2>


            <MudAlert Severity="Severity.Success" Variant="Variant.Outlined">Your password has been successfully reset. You can now log in using your new password.</MudAlert>

     
        </MudCardContent>
        <MudCardActions class="d-flex justify-content-center">
           
                <MudButton Href="Account/Login" Variant="Variant.Filled" Color="Color.Dark">Login</MudButton>
           
        </MudCardActions>
    </MudCard>
</div>

