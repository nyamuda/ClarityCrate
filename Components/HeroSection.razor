@using Clarity_Crate.Services
@inject SummarizationService SummarizationService


<style>
    .secondary-colored-text {
        color: #EF6C00;
    }
    .bg-danger {
        background-color: #EF6C00 !important;
    }

    .bg-secondary {
        background-color: #00897B !important;
    }
</style>

<!--Hero Section Start-->
<section style="background-image: url('img/b5.png'); background-repeat: no-repeat; background-size: cover; background-position: center;">
    <div class="container-lg">
        <div class="row">
            <div class="col-lg-6 pt-5 mt-5 text-light">
                <h2 class="display-1 ls-1">
                    <span class="fw-bold secondary-colored-text">Simplify</span> Your Reading with <span class="fw-bold">Clarity Crate</span>
                </h2>
                <p class="fs-4">
                    Summarize lengthy documents in seconds. Save time, stay informed, and focus on what truly matters.
                </p>
                <div class="d-flex gap-3">
                    <MudButton Href="/summarizer" Class="mt-3" Variant="Variant.Filled" Style="background-color: #00897B; color: white; width: 8rem; height: 3rem;">
                        Try Now
                    </MudButton>
                    <MudButton Href="/summarizer" Class="mt-3" Variant="Variant.Filled" Color="Color.Dark" Style="width: 8rem; height: 3rem;">
                        Read More
                    </MudButton>
                    
                </div>
                <div class="row my-5 text-light">
                    <div class="col">
                        <div class="row">
                            <div class="col-auto">
                                <p class="fs-1 fw-bold lh-sm mb-0">@SummarizationService.TotalWordsSummarized</p>
                            </div>
                            <div class="col fw-bold">
                                <p class="text-uppercase lh-sm mb-0">Words Summarized</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-auto">
                                <p class="fs-1 fw-bold lh-sm mb-0">500+</p>
                            </div>
                            <div class="col fw-bold">
                                <p class="text-uppercase lh-sm mb-0">Pages Supported</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-auto">
                                <p class="fs-1 fw-bold lh-sm mb-0">3+</p>
                            </div>
                            <div class="col fw-bold">
                                <p class="text-uppercase lh-sm mb-0">Modes of Summarization</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-sm-3 row-cols-lg-3 g-0 justify-content-center">
            <div class="col">
                <div class="card border-0 bg-secondary rounded-0 p-4 text-light">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <i class="fas fa-file-alt fa-3x"></i>
                        </div>
                        <div class="col-md-9">
                            <div class="card-body p-0">
                                <h5 class="text-light">Long Document Support</h5>
                                <p class="card-text">
                                    Quick summaries for up to 200,000 words or 1000 pages.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card border-0 bg-dark rounded-0 p-4 text-light">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <i class="fas fa-cogs fa-3x"></i>
                        </div>
                        <div class="col-md-9">
                            <div class="card-body p-0">
                                <h5 class="text-light">Flexible Summarization</h5>
                                <p class="card-text">
                                    Select paragraph, bullet point, or custom summary styles.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card border-0 bg-danger rounded-0 p-4 text-light">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <i class="fas fa-pen fa-3x"></i>
                        </div>
                        <div class="col-md-9">
                            <div class="card-body p-0">
                                <h5 class="text-light">OCR for Scanned PDFs</h5>
                                <p class="card-text">
                                    Extract and summarize scanned PDFs with ease.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--Hero Section End-->
<!-- About Clarity Crate Start -->
<div class="container-fluid text-dark feature pt-5" style="margin-top:6rem;">
    <!-- Start Section Title -->
    <div class="container section-title mb-3">
        <h2>About</h2>
        <p>Clarity Crate</p>
    </div><!-- End Section Title -->
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 align-self-center mb-md-5 pb-md-5 wow fadeIn" data-wow-delay="0.3s">
                <p class="mb-4">
                    Clarity Crate is a powerful AI-driven summarization tool that helps you process and understand vast amounts of text in seconds. Whether you're working with reports, academic papers, podcasts, or meeting notes, we provide accurate and concise summaries, saving you hours of reading time.
                </p>
                <p class="mb-4">
                    Our platform leverages an advanced machine learning model and automatic OCR technology to extract and summarize text from scanned PDFs. It's quick, efficient, and customizable to your needs—allowing you to choose between paragraph summaries, bullet points, or even custom formats.
                </p>
                <div class="mb-4">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Summarize" Title="Summarization" />
                        </div>
                        <div>
                            <span class="fw-bold d-block">Accurate Summarization</span>
                            <span class="">Get clear, concise summaries of long documents while preserving key details.</span>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Pageview" Title="OCR" />
                        </div>
                        <div>
                            <span class="fw-bold d-block">OCR for Scanned PDFs</span>
                            <span class="">Easily extract and summarize text from scanned PDF files using built-in OCR technology.</span>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Settings" Title="Customizable Modes" />
                        </div>
                        <div>
                            <span class="fw-bold d-block">Flexible Summarization Modes</span>
                            <span class="">Tailor your summaries with options like paragraph mode, bullet points, or custom instructions.</span>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.FileCopy" Title="Large Documents" />
                        </div>
                        <div>
                            <span class="fw-bold d-block">Handles Large Documents</span>
                            <span class="">Summarize documents up to 1,000 pages with ease and efficiency.</span>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Speed" Title="Efficiency" />
                        </div>
                        <div>
                            <span class="fw-bold d-block">Fast and Reliable</span>
                            <span class="">Generate summaries quickly, even for lengthy and complex documents.</span>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Shield" Title="Privacy" />
                        </div>
                        <div>
                            <span class="fw-bold d-block">Secure and Private</span>
                            <span class="">Your files and data are processed securely with no risk of unauthorized access.</span>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <MudIcon Color="Color.Primary" Icon="@Icons.Material.Filled.Help" Title="Ease of Use" />
                        </div>
                        <div>
                            <span class="fw-bold d-block">User-Friendly Interface</span>
                            <span class="">Navigate and use the app effortlessly, even if you're new to text summarization tools.</span>
                        </div>
                    </div>
                </div>


                <div class="row g-4 pt-3">
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: #26A69A;">
                            <i class="fa fa-users fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">10+</h2>
                                <p class="text-white mb-0">Happy Users</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: #26A69A">
                            <i class="fa fa-file-pdf fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">@SummarizationService.TotalDocumentsSummarized</h2>
                                <p class="text-white mb-0">Documents Summarized</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 align-self-end text-center text-md-end wow fadeIn" data-wow-delay="0.5s">
                <img class="img-fluid" src="img/about-img.jpg" alt="about section image">
            </div>
        </div>
    </div>
</div>

<!-- About Clarity Crate End -->
@code {



    protected override async Task OnInitializedAsync()
    {

        //get summary info
        await SummarizationService.GetSummaryInfo();
    }

    

}