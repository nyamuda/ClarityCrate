@page "/"
@inject NavigationManager NavigationManager
@using Clarity_Crate.Data
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager


<!-- Hero Section -->
<section class="text-center">

    <div class="text-center hero-text p-4">
        <h2>Welcome to the Science Definitions Learning Tool</h2>
        <p>Master the art of defining science terms with accuracy and confidence.</p>
        <MudButton Href="/definitions" Variant="Variant.Filled" Color="Color.Primary">
            Start learning
        </MudButton>
    </div>
</section>

<!-- Benefits Section -->
<section class="benefits-section my-5">
    <h3 class="text-center">Why Use Our Application?</h3>
    <div class="row">
        <div class="col-md-4 text-center">
            <i class="fa fa-book fa-3x"></i>
            <h4>Comprehensive Definitions</h4>
            <p>Access accurate and curriculum-specific definitions for various science terms.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fa fa-graduation-cap fa-3x"></i>
            <h4>Practice and Improve</h4>
            <p>Test your knowledge and improve your skills with our practice exercises.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fa fa-user fa-3x"></i>
            <h4>User-Friendly Interface</h4>
            <p>Enjoy a seamless and engaging learning experience with our easy-to-use application.</p>
        </div>
    </div>
</section>





