@page "/summarizer"
@using Clarity_Crate.Services
@using Clarity_Crate.Models
@using Clarity_Crate.Components.Pages.Flashcards
<PageTitle>Summarizer</PageTitle>
@inject NavigationManager NavigationManager
@inject CurriculumService CurriculumService
@inject SubjectService SubjectService
@inject TopicService TopicService
@inject LevelService LevelService
@inject TermService TermService

<style>
    .desktop-summarizer {
    min-height: 25rem;
   
}

    .mobile-summarizer {
        min-height: 40rem;
    }
</style>




<!--Desktop Tabs Start-->
<div class="w-100 d-none d-md-block">
    <div>
        <MudTabs Class="desktop-summarizer" ActivePanelIndex="1" HideSlider="true" Border="true" Elevation="2" Rounded="true"
            ApplyEffectsToContainer="true" PanelClass="pa-0 pa-md-6">
            <MudTabPanel Disabled="true" Class="d-none d-md-flex">
                <TabContent>
                    <MudText Class="grey-text text-darken-4">Modes:</MudText>
                </TabContent>

            </MudTabPanel>
            <MudTabPanel>
                <ChildContent >
                  <SummaryItem ShowSlider="true" Mode="paragraph"/>
                </ChildContent>
                <TabWrapperContent>
                    <MudTooltip Text="Summarizes the content in a single cohesive paragraph.">
                        @context
                    </MudTooltip>
                </TabWrapperContent>
                <TabContent>
                    <MudText>Paragraph</MudText>    
                </TabContent>

            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                    <SummaryItem ShowSlider="false" Mode="bullet" />
                </ChildContent>
                <TabWrapperContent>
                    <MudTooltip
                        Text="Summarizes the content in a list format, with each point highlighting a key idea.">
                        @context
                    </MudTooltip>
                </TabWrapperContent>
                <TabContent>
                    <MudText class="">Bullet Points</MudText>
                </TabContent>

            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                    <SummaryItem ShowSlider="false" Mode="custom" />
                </ChildContent>
                <TabWrapperContent>
                    <MudTooltip Text="Enter specific custom instructions on how you want the text to be summarized.">
                        @context
                    </MudTooltip>
                </TabWrapperContent>
                <TabContent>
                    <MudText class="">Custom</MudText>
                </TabContent>
            </MudTabPanel>
            

        </MudTabs>
    </div>
</div>
<!--Desktop Tabs End-->

<!--Mobile Tabs Start-->
<div class="w-100 d-block d-md-none">
    <div>
        <MudTabs MinimumTabWidth="2rem" Centered="true" Class="mobile-summarizer" ActivePanelIndex="1" HideSlider="true" Border="true" Elevation="2" Rounded="false"
                 ApplyEffectsToContainer="true" PanelClass="pa-0 pa-md-6">
            <MudTabPanel>
                <ChildContent>
                    <SummaryItem ShowSlider="true" Mode="paragraph" />
                </ChildContent>
                <TabWrapperContent>
                    <MudTooltip Text="Summarizes the content in a single cohesive paragraph.">
                        @context
                    </MudTooltip>
                </TabWrapperContent>
                <TabContent>
                    <MudIcon Icon="fas fa-align-left" Color="Color.Primary" />
                    <MudText class="ml-1">Paragraph</MudText>
                </TabContent>

            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                    <SummaryItem ShowSlider="false" Mode="bullet" />
                </ChildContent>
                <TabWrapperContent>
                    <MudTooltip Text="Summarizes the content in a list format, with each point highlighting a key idea.">
                        @context
                    </MudTooltip>
                </TabWrapperContent>
                <TabContent>
                    <MudIcon Icon="fas fa-list-ul" Color="Color.Secondary" />
                    <MudText class="ml-1">Bullet Points</MudText>
                </TabContent>

            </MudTabPanel>
            <MudTabPanel>
                <ChildContent>
                    <SummaryItem ShowSlider="false" Mode="custom" />
                </ChildContent>
                <TabWrapperContent>
                    <MudTooltip Text="Enter specific custom instructions on how you want the text to be summarized.">
                        @context
                    </MudTooltip>
                </TabWrapperContent>
                <TabContent>
                    <MudIcon Icon="fas fa-sliders-h" Color="Color.Tertiary" />
                    <MudText class="ml-1">Custom</MudText>
                </TabContent>
            </MudTabPanel>


        </MudTabs>
    </div>
</div>


<!--Mobile Tabs End-->


